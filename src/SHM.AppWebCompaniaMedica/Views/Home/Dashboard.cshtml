@model SHM.AppWebCompaniaMedica.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Top Bar -->
<div class="top-bar fade-in">
    <div>
        <h1>Dashboard</h1>
    </div>
</div>

<!-- Stats Cards -->
<div class="stats-grid">
    <div class="stat-card fade-in stagger-1">
        <div class="stat-header">
            <div>
                <div class="stat-value">S/ @Model.TotalPorFacturar.ToString("N2")</div>
                <div class="stat-label">Total por Facturar</div>
            </div>
            <div class="stat-icon warning">
                <i class="bi bi-currency-dollar"></i>
            </div>
        </div>
    </div>

    <div class="stat-card fade-in stagger-2">
        <div class="stat-header">
            <div>
                <div class="stat-value">@Model.FacturasPendientes</div>
                <div class="stat-label">Facturas Pendientes</div>
            </div>
            <div class="stat-icon primary">
                <i class="bi bi-file-earmark-text"></i>
            </div>
        </div>
    </div>

    <div class="stat-card fade-in stagger-3">
        <div class="stat-header">
            <div>
                <div class="stat-value">@Model.FacturasEnviadasMes</div>
                <div class="stat-label">Facturas Enviadas (Mes)</div>
            </div>
            <div class="stat-icon info">
                <i class="bi bi-send-check"></i>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Stats Row -->
<div class="row">
    <div class="col-md-8 mb-4">
        <div class="table-card fade-in">
            <div class="table-header">
                <h3>
                    <i class="bi bi-bar-chart-fill"></i>
                    Facturas por Mes
                </h3>
            </div>
            <div style="padding: 2rem;">
                <canvas id="facturasChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="table-card fade-in">
            <div class="table-header">
                <h3>
                    <i class="bi bi-pie-chart-fill"></i>
                    Estados
                </h3>
            </div>
            <div style="padding: 2rem;">
                <canvas id="estadosChart" style="max-height: 250px;"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats Row -->
<div class="row">
    <div class="col-md-12 mb-4">
        <div class="table-card fade-in">
            <div class="table-header">
                <h3>
                    <i class="bi bi-graph-up"></i>
                    Resumen del Mes
                </h3>
            </div>
            <div style="padding: 2rem;">
                <div class="row">
                    <div class="col-md-4">
                        <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--bg-main); border-radius: 10px;">
                            <span style="color: var(--text-secondary); font-weight: 600;">Total Facturado</span>
                            <span style="font-weight: 700; font-family: 'JetBrains Mono', monospace; color: var(--accent);">S/ 245,680.00</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--bg-main); border-radius: 10px;">
                            <span style="color: var(--text-secondary); font-weight: 600;">Facturas Procesadas</span>
                            <span style="font-weight: 700; font-family: 'JetBrains Mono', monospace;">32</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--bg-main); border-radius: 10px;">
                            <span style="color: var(--text-secondary); font-weight: 600;">Tiempo Promedio</span>
                            <span style="font-weight: 700; font-family: 'JetBrains Mono', monospace;">2.5 dias</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Datos del modelo para graficos
        const meses = [@Html.Raw(string.Join(",", Model.FacturasPorMes.Select(f => $"'{f.Mes}'")))];
        const facturasEnviadasData = [@string.Join(",", Model.FacturasPorMes.Select(f => f.FacturasEnviadas))];
        const facturasPendientesData = [@string.Join(",", Model.FacturasPorMes.Select(f => f.FacturasPendientes))];

        // Datos para grafico de estados
        const estadosData = {
            pendientes: @Model.CantidadPendienteFactura,
            enviadas: @Model.CantidadFacturaEnviada,
            enviadasHHMM: @Model.CantidadFacturaEnviadaHHMM,
            pagadas: @Model.CantidadFacturaPagada
        };

        // Grafico de Facturas por Mes (Barras)
        const ctxFacturas = document.getElementById('facturasChart').getContext('2d');
        const facturasChart = new Chart(ctxFacturas, {
            type: 'bar',
            data: {
                labels: meses,
                datasets: [{
                    label: 'Facturas Enviadas',
                    data: facturasEnviadasData,
                    backgroundColor: 'rgba(242, 101, 34, 0.8)',
                    borderColor: 'rgba(242, 101, 34, 1)',
                    borderWidth: 2,
                    borderRadius: 8
                }, {
                    label: 'Facturas Pendientes',
                    data: facturasPendientesData,
                    backgroundColor: 'rgba(245, 158, 11, 0.8)',
                    borderColor: 'rgba(245, 158, 11, 1)',
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            font: {
                                family: 'Outfit',
                                size: 12
                            },
                            padding: 15,
                            usePointStyle: true
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            font: {
                                family: 'Outfit'
                            }
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                family: 'Outfit'
                            }
                        },
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Grafico de Estados (Dona)
        const ctxEstados = document.getElementById('estadosChart').getContext('2d');
        const estadosChart = new Chart(ctxEstados, {
            type: 'doughnut',
            data: {
                labels: ['Pendiente Factura', 'Factura Enviada', 'Enviada a HHMM', 'Pagadas'],
                datasets: [{
                    data: [estadosData.pendientes, estadosData.enviadas, estadosData.enviadasHHMM, estadosData.pagadas],
                    backgroundColor: [
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(34, 197, 94, 0.8)',
                        'rgba(242, 101, 34, 0.8)'
                    ],
                    borderColor: [
                        'rgba(245, 158, 11, 1)',
                        'rgba(59, 130, 246, 1)',
                        'rgba(34, 197, 94, 1)',
                        'rgba(242, 101, 34, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                family: 'Outfit',
                                size: 11
                            },
                            padding: 12,
                            usePointStyle: true,
                            generateLabels: function(chart) {
                                const data = chart.data;
                                if (data.labels.length && data.datasets.length) {
                                    return data.labels.map((label, i) => {
                                        const value = data.datasets[0].data[i];
                                        const backgroundColor = data.datasets[0].backgroundColor[i];
                                        return {
                                            text: `${label}: ${value}`,
                                            fillStyle: backgroundColor,
                                            hidden: false,
                                            index: i
                                        };
                                    });
                                }
                                return [];
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.parsed || 0;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                return `${label}: ${value} (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });
    </script>
}
