<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal de Honorarios MÃ©dicos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary: #5a1160;
            --primary-light: #7a1880;
            --accent: #f26522;
            --accent-dark: #d95519;
            --warning: #F59E0B;
            --danger: #EF4444;
        }

        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        /* Login Page Styles */
        .login-container {
            min-height: 100vh;
            height: 100vh;
            display: flex;
            position: relative;
            z-index: 1;
            padding: 0;
            margin: 0;
            overflow: hidden;
        }

        .login-wrapper {
            display: flex;
            width: 100%;
            height: 100vh;
            background: white;
        }

        .login-left {
            flex: 0 0 50%;
            width: 50%;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 50%, var(--accent) 100%);
            padding: 4rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            overflow: hidden;
            height: 100vh;
        }

        .login-left-content {
            position: relative;
            z-index: 2;
        }

        .login-brand h1 {
            color: white;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .login-brand p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
        }

        .login-right {
            flex: 0 0 50%;
            width: 50%;
            padding: 4rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: white;
            height: 100vh;
        }

        .form-control {
            border: 2px solid #E2E8F0;
            border-radius: 12px;
            padding: 0.75rem 1rem;
        }

        .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(242, 101, 34, 0.1);
            outline: none;
        }

        .btn-login {
            background: var(--accent);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 0.875rem;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-login:hover {
            background: var(--accent-dark);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(242, 101, 34, 0.3);
        }

        @@media (max-width: 992px) {
            .login-wrapper {
                flex-direction: column;
            }

            .login-left, .login-right {
                flex: 0 0 auto;
                width: 100%;
                height: auto;
                min-height: 50vh;
            }
        }
    </style>
</head>
<body>
    <div class="bg-pattern"></div>
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
