@model SHM.AppWebHonorarioMedico.Models.CuentaBancariaEditViewModel

<div class="modal fade" id="editCuentaBancariaModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white">
                    <i class="fas fa-edit mr-2"></i>Editar Cuenta Bancaria
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="editCuentaBancariaForm">
                @Html.AntiForgeryToken()
                <input type="hidden" id="cb_edit_GuidRegistro" value="@Model.GuidRegistro" />
                <input type="hidden" id="cb_edit_EntidadGuid" value="@Model.EntidadGuid" />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="cb_edit_IdBanco">Banco <span class="text-danger">*</span></label>
                        <select id="cb_edit_IdBanco" class="form-control" required>
                            <option value="">-- Seleccione --</option>
                            @foreach (var banco in Model.Bancos)
                            {
                                if (banco.Value == Model.IdBanco?.ToString())
                                {
                                    <option value="@banco.Value" selected>@banco.Text</option>
                                }
                                else
                                {
                                    <option value="@banco.Value">@banco.Text</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="cb_edit_CuentaCorriente">Cuenta Corriente <span class="text-danger">*</span></label>
                        <input type="text" id="cb_edit_CuentaCorriente" class="form-control" maxlength="30"
                               value="@Model.CuentaCorriente" required />
                    </div>
                    <div class="form-group">
                        <label for="cb_edit_CuentaCci">Cuenta CCI</label>
                        <input type="text" id="cb_edit_CuentaCci" class="form-control" maxlength="30"
                               value="@Model.CuentaCci" />
                    </div>
                    <div class="form-group">
                        <label for="cb_edit_Moneda">Moneda <span class="text-danger">*</span></label>
                        <select id="cb_edit_Moneda" class="form-control" required>
                            <option value="">-- Seleccione --</option>
                            @foreach (var moneda in Model.Monedas)
                            {
                                if (moneda.Value == Model.Moneda)
                                {
                                    <option value="@moneda.Value" selected>@moneda.Text</option>
                                }
                                else
                                {
                                    <option value="@moneda.Value">@moneda.Text</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="cb_edit_Activo">Estado</label>
                        <select id="cb_edit_Activo" class="form-control">
                            @if (Model.Activo == 1)
                            {
                                <option value="1" selected>Activo</option>
                                <option value="0">Inactivo</option>
                            }
                            else
                            {
                                <option value="1">Activo</option>
                                <option value="0" selected>Inactivo</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-times mr-1"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-info" onclick="submitEditCuentaBancaria()">
                        <i class="fas fa-save mr-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
