@model SHM.AppWebHonorarioMedico.Models.MisDatosViewModel
@{
    ViewData["Title"] = "Mis Datos";
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 titulo-formulario">
                            <i class="fas fa-user-cog mr-2"></i>Mis Datos
                        </h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                            <li class="breadcrumb-item active">Mis Datos</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle mr-2"></i>@ViewBag.SuccessMessage
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle mr-2"></i>@ViewBag.ErrorMessage
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <form asp-action="MisDatos" method="post">
                    <input type="hidden" asp-for="IdUsuario" />
                    <input type="hidden" asp-for="Login" />
                    <input type="hidden" asp-for="TipoUsuario" />

                    <div class="row">
                        <div class="col-md-8">
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        <i class="fas fa-id-card mr-2"></i>Datos Personales
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Login" class="adg-label"></label>
                                                <input asp-for="Login" class="form-control form-control-sm" readonly disabled />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="TipoUsuario" class="adg-label"></label>
                                                <input asp-for="TipoUsuario" class="form-control form-control-sm" readonly disabled />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Nombres" class="adg-label"></label>
                                                <input asp-for="Nombres" class="form-control form-control-sm" placeholder="Ingrese sus nombres" />
                                                <span asp-validation-for="Nombres" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="ApellidoPaterno" class="adg-label"></label>
                                                <input asp-for="ApellidoPaterno" class="form-control form-control-sm" placeholder="Ingrese apellido paterno" />
                                                <span asp-validation-for="ApellidoPaterno" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="ApellidoMaterno" class="adg-label"></label>
                                                <input asp-for="ApellidoMaterno" class="form-control form-control-sm" placeholder="Ingrese apellido materno" />
                                                <span asp-validation-for="ApellidoMaterno" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Email" class="adg-label"></label>
                                                <div class="input-group input-group-sm">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                    </div>
                                                    <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                                                </div>
                                                <span asp-validation-for="Email" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="NumeroDocumento" class="adg-label"></label>
                                                <input asp-for="NumeroDocumento" class="form-control form-control-sm" placeholder="DNI / CE" />
                                                <span asp-validation-for="NumeroDocumento" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="Celular" class="adg-label"></label>
                                                <div class="input-group input-group-sm">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                                    </div>
                                                    <input asp-for="Celular" class="form-control" placeholder="999999999" />
                                                </div>
                                                <span asp-validation-for="Celular" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card card-warning card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        <i class="fas fa-key mr-2"></i>Cambiar Contrasena
                                    </h3>
                                    <div class="card-tools">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" id="chkCambiarPassword" asp-for="CambiarPassword">
                                            <label class="custom-control-label" for="chkCambiarPassword"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body" id="divCambiarPassword" style="display: none;">
                                    <div class="form-group">
                                        <label asp-for="PasswordActual" class="adg-label"></label>
                                        <div class="input-group input-group-sm">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            </div>
                                            <input asp-for="PasswordActual" class="form-control" placeholder="Ingrese su contrasena actual" />
                                            <div class="input-group-append">
                                                <span class="input-group-text" onclick="togglePassword('PasswordActual')" style="cursor: pointer;">
                                                    <i class="fas fa-eye" id="icon_PasswordActual"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="PasswordActual" class="text-danger small"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="PasswordNueva" class="adg-label"></label>
                                        <div class="input-group input-group-sm">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            </div>
                                            <input asp-for="PasswordNueva" class="form-control" placeholder="Ingrese la nueva contrasena" />
                                            <div class="input-group-append">
                                                <span class="input-group-text" onclick="togglePassword('PasswordNueva')" style="cursor: pointer;">
                                                    <i class="fas fa-eye" id="icon_PasswordNueva"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="PasswordNueva" class="text-danger small"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ConfirmarPassword" class="adg-label"></label>
                                        <div class="input-group input-group-sm">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            </div>
                                            <input asp-for="ConfirmarPassword" class="form-control" placeholder="Confirme la nueva contrasena" />
                                            <div class="input-group-append">
                                                <span class="input-group-text" onclick="togglePassword('ConfirmarPassword')" style="cursor: pointer;">
                                                    <i class="fas fa-eye" id="icon_ConfirmarPassword"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="ConfirmarPassword" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="card card-secondary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        <i class="fas fa-info-circle mr-2"></i>Informacion de Cuenta
                                    </h3>
                                </div>
                                <div class="card-body p-0">
                                    <table class="table table-sm mb-0">
                                        <tr>
                                            <td class="text-muted" style="width: 50%;">Fecha de Creacion</td>
                                            <td><strong>@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</strong></td>
                                        </tr>
                                        <tr>
                                            <td class="text-muted">Ultima Modificacion</td>
                                            <td>
                                                <strong>
                                                    @(Model.FechaModificacion.HasValue ? Model.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm") : "Sin modificaciones")
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body text-right">
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-arrow-left mr-1"></i>Volver
                                    </a>
                                    <button type="submit" class="btn btn-morado btn-sm btn-loading">
                                        <i class="fas fa-save mr-1"></i>Guardar Cambios
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Mostrar/ocultar seccion de cambio de contrasena
            togglePasswordSection();

            $('#chkCambiarPassword').change(function () {
                togglePasswordSection();
            });
        });

        function togglePasswordSection() {
            if ($('#chkCambiarPassword').is(':checked')) {
                $('#divCambiarPassword').slideDown();
            } else {
                $('#divCambiarPassword').slideUp();
                // Limpiar campos de contrasena
                $('#PasswordActual').val('');
                $('#PasswordNueva').val('');
                $('#ConfirmarPassword').val('');
            }
        }

        function togglePassword(fieldId) {
            var field = document.getElementById(fieldId);
            var icon = document.getElementById('icon_' + fieldId);

            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <text>
                toastr.success('@ViewBag.SuccessMessage', 'Exito');
            </text>
        }

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <text>
                toastr.error('@ViewBag.ErrorMessage', 'Error');
            </text>
        }
    </script>
}
