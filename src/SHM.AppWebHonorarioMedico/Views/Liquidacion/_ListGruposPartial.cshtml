@model SHM.AppWebHonorarioMedico.Models.LiquidacionGrupoListViewModel

<div class="card-body table-responsive p-0">
    <table class="table table-hover table-striped table-sm" style="font-size: 0.85rem;">
        <thead>
            <tr>
                <th style="width: 40px;" class="text-center">Sel.</th>
                <th style="width: 100px;">Liquidacion</th>
                <th>Descripcion</th>
                <th style="width: 100px;">Tipo</th>
                <th style="width: 90px;">Periodo</th>
                <th style="width: 150px;">Banco</th>
                <th style="width: 60px;" class="text-center">Fact.</th>
                <th style="width: 100px;" class="text-right">Total S/.</th>
                <th style="width: 60px;" class="text-center">Detalle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox"
                                   class="form-check-input"
                                   data-codigo="@item.CodigoLiquidacion"
                                   data-banco="@item.IdBanco"
                                   onchange="onCheckboxChange(this, '@item.CodigoLiquidacion', @(item.IdBanco ?? 0), '@(item.NombreBanco?.Replace("'", "\\'") ?? "-")')" />
                        </td>
                        <td>@(item.CodigoLiquidacion ?? "-")</td>
                        <td>@(item.Descripcion ?? "-")</td>
                        <td>@(item.DesTipoProduccion ?? "-")</td>
                        <td>@(item.Periodo ?? "-")</td>
                        <td>@(item.NombreBanco ?? "-")</td>
                        <td class="text-center">
                            <span class="badge badge-info">@item.CantidadFacturas</span>
                        </td>
                        <td class="text-right font-weight-bold">@(item.MtoTotal?.ToString("N2") ?? "-")</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-info btn-xs"
                                    onclick="verProducciones('@item.CodigoLiquidacion', @(item.IdBanco ?? 0), '@(item.Descripcion?.Replace("'", "\\'") ?? "-")', '@(item.DesTipoProduccion?.Replace("'", "\\'") ?? "-")')"
                                    title="Ver Facturas">
                                <i class="fas fa-list"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-muted py-4">
                        <i class="fas fa-inbox fa-2x mb-2"></i>
                        <p class="mb-0">No se encontraron liquidaciones</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.Items.Any())
{
    <div class="card-footer">
        <small class="text-muted">
            Mostrando @Model.Items.Count registro(s) |
            <strong>Total:</strong> S/. @(Model.Items.Sum(x => x.MtoTotal ?? 0).ToString("N2"))
        </small>
    </div>
}
