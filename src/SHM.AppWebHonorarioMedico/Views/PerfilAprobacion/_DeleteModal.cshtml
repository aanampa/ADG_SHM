@model SHM.AppWebHonorarioMedico.Models.PerfilAprobacionDeleteViewModel

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white">
                    <i class="fas fa-trash mr-2"></i>Eliminar Perfil de Aprobaci&oacute;n
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="deleteForm">
                @Html.AntiForgeryToken()
                <input type="hidden" id="delete_GuidRegistro" value="@Model.GuidRegistro" />
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
                    </div>
                    <p class="text-center">
                        &iquest;Est&aacute; seguro que desea eliminar el siguiente perfil de aprobaci&oacute;n?
                    </p>
                    <div class="card bg-light">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Grupo Flujo Trabajo:</dt>
                                <dd class="col-sm-7">@(Model.GrupoFlujoTrabajo ?? "-")</dd>

                                <dt class="col-sm-5">C&oacute;digo:</dt>
                                <dd class="col-sm-7">@(Model.Codigo ?? "-")</dd>

                                <dt class="col-sm-5">Descripci&oacute;n:</dt>
                                <dd class="col-sm-7">@(Model.Descripcion ?? "-")</dd>

                                <dt class="col-sm-5">Nivel:</dt>
                                <dd class="col-sm-7">@(Model.Nivel ?? "-")</dd>

                                <dt class="col-sm-5">Orden:</dt>
                                <dd class="col-sm-7">@Model.Orden</dd>
                            </dl>
                        </div>
                    </div>
                    <div class="alert alert-info mt-3 mb-0">
                        <i class="fas fa-info-circle"></i>
                        El perfil ser&aacute; desactivado y no se mostrar&aacute; en las listas de selecci&oacute;n.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-times mr-1"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" onclick="submitDelete()">
                        <i class="fas fa-trash mr-1"></i>Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
