@model SHM.AppDomain.DTOs.Produccion.ProduccionListaResponseDto
@{
    ViewData["Title"] = "Detalle de Produccion";
    var archivos = ViewBag.Archivos as List<SHM.AppWebHonorarioMedico.Models.ArchivoAdjuntoViewModel>
        ?? new List<SHM.AppWebHonorarioMedico.Models.ArchivoAdjuntoViewModel>();
    var badgeClass = Model.Estado switch
    {
        "FACTURA_PENDIENTE" => "badge-estado-pendiente",
        "FACTURA_SOLICITADA" => "badge-estado-solicitada",
        "FACTURA_ENVIADA" => "badge-estado-enviada",
        "FACTURA_ACEPTADA" => "badge-estado-aceptada",
        "FACTURA_LIQUIDADA" => "badge-estado-liquidada",
        "FACTURA_PAGADA" => "badge-estado-pagada",
        "FACTURA_DEVUELTA" => "badge-estado-devuelta",
        _ => "badge-secondary"
    };
    var tipoComprobanteTexto = Model.TipoComprobante switch
    {
        "01" => "Factura",
        "03" => "Boleta",
        _ => Model.TipoComprobante ?? "-"
    };
}

<style>
    .card-compact .card-header { padding: 0.5rem 0.75rem; }
    .card-compact .card-body { padding: 0.75rem; }
    .card-compact .card-title { font-size: 0.9rem; margin-bottom: 0; }
    .form-group-sm { margin-bottom: 0.5rem; }
    .form-group-sm label { font-size: 0.8rem; margin-bottom: 0.15rem; color: #6c757d; }
    .form-group-sm .form-control-sm { font-size: 0.8rem; padding: 0.2rem 0.4rem; height: auto; }
    .info-label { font-size: 0.75rem; color: #6c757d; margin-bottom: 0; }
    .info-value { font-size: 0.85rem; font-weight: 500; margin-bottom: 0.4rem; }
    .monto-item { text-align: center; padding: 0.3rem; }
    .monto-label { font-size: 0.7rem; color: #6c757d; }
    .monto-value { font-size: 0.85rem; font-weight: 600; }
    .section-title { font-weight: 600; color: #6c757d; font-size: 0.85rem; margin-bottom: 0.5rem; border-bottom: 1px solid #e9ecef; padding-bottom: 0.3rem; }
</style>

<div class="wrapper">
    <div class="content-wrapper" style="min-height: auto;">

        <div class="content-header py-2">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="m-0 titulo-formulario" style="font-size: 1.2rem;">
                        <i class="fas fa-file-medical mr-2"></i>Detalle de Produccion
                    </h1>
                    <a id="btnVolver" href="@Url.Action("Index", "Produccion")"
                        class="btn btn-sm btn-outline-secondary"
                        title="Volver a la lista">
                        <i class="fas fa-arrow-left mr-1"></i>Volver
                    </a>
                </div>
                <ol class="breadcrumb m-0 bg-transparent p-0 mt-1" style="font-size: 0.8rem;">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a id="breadcrumbProduccion" href="@Url.Action("Index", "Produccion")">Produccion</a></li>
                    <li class="breadcrumb-item active">Detalle</li>
                </ol>
            </div>
        </div>

        <section class="content py-0">
            <div class="container-fluid">
                <div class="row">
                    <!-- COLUMNA IZQUIERDA: Datos + Cia Medica + Montos -->
                    <div class="col-md-6">
                        <!-- Datos de Produccion -->
                        <div class="card card-compact mb-2">
                            <div class="card-header bg-light">
                                <h3 class="card-title">
                                    <i class="fas fa-info-circle mr-1"></i>Datos de Produccion
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group-sm">
                                            <label>Produccion</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.CodigoProduccion ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group-sm">
                                            <label>Tipo</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.DesTipoProduccion ?? Model.TipoProduccion ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group-sm">
                                            <label>Periodo</label>
                                            <input type="text" class="form-control form-control-sm" value="@FormatPeriodo(Model.Periodo)" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group-sm">
                                            <label>Rubro</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.DesTipoRubro ?? Model.TipoRubro ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group-sm">
                                            <label>Tipo Medico</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.DesTipoMedico ?? Model.TipoMedico ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group-sm">
                                            <label>Sede</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.NombreSede ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group-sm">
                                            <label>Descripcion</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.Descripcion ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Cia Medica -->
                        <div class="card card-compact mb-2">
                            <div class="card-header bg-light">
                                <h3 class="card-title">
                                    <i class="fas fa-building mr-1"></i>Cía Medica
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group-sm">
                                            <label>RUC</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.Ruc ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <div class="form-group-sm">
                                            <label>Tipo Entidad</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.DesTipoEntidadMedica ?? Model.TipoEntidadMedica ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group-sm mb-0">
                                            <label>Razon Social</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.RazonSocial ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Datos Bancarios para Pago -->
                        <div class="card card-compact mb-2">
                            <div class="card-header bg-light">
                                <h3 class="card-title">
                                    <i class="fas fa-university mr-1"></i>Datos Bancarios para Pago
                                </h3>
                            </div>
                            <div class="card-body">
                                @{
                                    var nombreBanco = ViewBag.NombreBanco as string;
                                    var cuentaCorriente = ViewBag.CuentaCorriente as string;
                                    var cuentaCci = ViewBag.CuentaCci as string;
                                    var moneda = ViewBag.Moneda as string;
                                }
                                @if (string.IsNullOrEmpty(cuentaCorriente) && string.IsNullOrEmpty(cuentaCci))
                                {
                                    <div class="alert alert-warning mb-0" style="font-size: 0.8rem;">
                                        <i class="fas fa-exclamation-triangle mr-1"></i>No tiene cuenta bancaria registrada.
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group-sm">
                                                <label>Banco</label>
                                                <input type="text" class="form-control form-control-sm" value="@(nombreBanco ?? "-")" readonly style="background-color: #e9ecef;">
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group-sm">
                                                <label>Moneda</label>
                                                <input type="text" class="form-control form-control-sm" value="@(moneda == "S" ? "Soles" : moneda ?? "-")" readonly style="background-color: #e9ecef;">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group-sm">
                                                <label>Cuenta Corriente</label>
                                                <input type="text" class="form-control form-control-sm" value="@(cuentaCorriente ?? "-")" readonly style="background-color: #e9ecef;">
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group-sm mb-0">
                                                <label>Cuenta CCI</label>
                                                <input type="text" class="form-control form-control-sm" value="@(cuentaCci ?? "-")" readonly style="background-color: #e9ecef;">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Montos -->
                        <div class="card card-compact mb-2">
                            <div class="card-header bg-light">
                                <h3 class="card-title">
                                    <i class="fas fa-calculator mr-1"></i>Montos
                                </h3>
                            </div>
                            <div class="card-body py-2">
                                <div class="d-flex justify-content-between" style="background: #f8f9fa; border-radius: 6px; padding: 0.5rem;">
                                    <div class="monto-item">
                                        <div class="monto-label">Consumo</div>
                                        <div class="monto-value">S/ @(Model.MtoConsumo?.ToString("N2") ?? "0.00")</div>
                                    </div>
                                    <div class="monto-item">
                                        <div class="monto-label">Descuento</div>
                                        <div class="monto-value text-danger">S/ @(Model.MtoDescuento?.ToString("N2") ?? "0.00")</div>
                                    </div>
                                    <div class="monto-item">
                                        <div class="monto-label">Sub Total</div>
                                        <div class="monto-value">S/ @(Model.MtoSubtotal?.ToString("N2") ?? "0.00")</div>
                                    </div>
                                    <div class="monto-item">
                                        <div class="monto-label">IGV</div>
                                        <div class="monto-value">S/ @(Model.MtoIgv?.ToString("N2") ?? "0.00")</div>
                                    </div>
                                    <div class="monto-item">
                                        <div class="monto-label">Renta</div>
                                        <div class="monto-value">S/ @(Model.MtoRenta?.ToString("N2") ?? "0.00")</div>
                                    </div>
                                    <div class="monto-item" style="background: #e3f2fd; border-radius: 4px; padding: 0.3rem 0.5rem;">
                                        <div class="monto-label text-primary">Total</div>
                                        <div class="monto-value text-primary">S/ @(Model.MtoTotal?.ToString("N2") ?? "0.00")</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Bitacora (oculto temporalmente) -->
                        <div class="card card-compact mb-2" style="display: none;">
                            <div class="card-header bg-light">
                                <h3 class="card-title">
                                    <i class="fas fa-history mr-1"></i>Bitácora
                                </h3>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-sm table-striped table-bordered mb-0" style="font-size: 0.8rem;">
                                        <thead class="thead-light">
                                            <tr>
                                                <th style="width: 30px;" class="text-center">#</th>
                                                <th>Acción</th>
                                                <th style="width: 100px;">De</th>
                                                <th style="width: 110px;">Fecha</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">1</td>
                                                <td>Se solicito Factura con Fecha Limite 23/01/2026 18:00</td>
                                                <td>Juan Perez</td>
                                                <td>15/11/2005 11:00</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">2</td>
                                                <td>Se envio Factura</td>
                                                <td>Maria Robles</td>
                                                <td>16/11/2005 8:00</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- COLUMNA DERECHA: Comprobante -->
                    <div class="col-md-6">
                        <div class="card card-compact mb-2">
                            <div class="card-header bg-light">
                                <h3 class="card-title">
                                    <i class="fas fa-file-invoice mr-1"></i>Comprobante
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <div class="form-group-sm">
                                            <label>Tipo</label>
                                            <input type="text" class="form-control form-control-sm" value="@tipoComprobanteTexto" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group-sm">
                                            <label>Serie - Numero</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.ComprobanteFactura ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group-sm">
                                            <label>Fecha Emision</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.FechaEmision?.ToString("dd/MM/yyyy") ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group-sm">
                                            <label>Estado</label>
                                            <div>
                                                <span class="badge @badgeClass" style="font-size: 0.75rem; padding: 0.35rem 0.5rem;">@(Model.DesEstado ?? Model.Estado ?? "-")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="form-group-sm">
                                            <label>Fecha Limite</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.FechaLimite?.ToString("dd/MM/yyyy HH:mm") ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group-sm">
                                            <label>Concepto</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.Concepto ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                    <div class="col-5">
                                        <div class="form-group-sm">
                                            <label>Glosa</label>
                                            <input type="text" class="form-control form-control-sm" value="@(Model.Glosa ?? "-")" readonly style="background-color: #e9ecef;">
                                        </div>
                                    </div>
                                </div>

                                @if (Model.Estado == "FACTURA_PENDIENTE" || Model.Estado == "FACTURA_SOLICITADA")
                                {
                                    <div class="mt-2">
                                        <button type="button" class="btn btn-success btn-sm" onclick="solicitarFactura()">
                                            <i class="fas fa-file-invoice-dollar mr-1"></i>@(Model.Estado == "FACTURA_SOLICITADA" ? "Actualizar Fecha Limite" : "Solicitar Factura")
                                        </button>
                                    </div>
                                }
                                @if (Model.Estado == "FACTURA_ENVIADA")
                                {
                                    <div class="mt-2">
                                        <button type="button" class="btn btn-danger btn-sm mr-2" onclick="devolverFactura()">
                                            <i class="fas fa-undo mr-1"></i>Devolver
                                        </button>
                                        <button type="button" class="btn btn-success btn-sm" onclick="aceptarFactura()">
                                            <i class="fas fa-check mr-1"></i>Aceptar
                                        </button>
                                    </div>
                                }

                                @* Documentos Adjuntos *@
                                @if (Model.Estado != "FACTURA_PENDIENTE" && Model.Estado != "FACTURA_SOLICITADA" && archivos.Any())
                                {
                                    <hr class="my-2" />
                                    <div class="section-title">
                                        <i class="fas fa-paperclip mr-1"></i>Documentos Adjuntos
                                    </div>
                                    <div class="d-flex flex-wrap">
                                        @foreach (var archivo in archivos.Where(a => a.TipoArchivo?.ToUpper() != "CDR"))
                                        {
                                            var iconClass = archivo.TipoArchivo?.ToUpper() switch
                                            {
                                                "PDF" => "far fa-file-pdf",
                                                "XML" => "far fa-file-code",
                                                "CDR" => "far fa-file-archive",
                                                _ => "far fa-file"
                                            };
                                            var iconColor = archivo.TipoArchivo?.ToUpper() switch
                                            {
                                                "PDF" => "#dc3545",
                                                "XML" => "#f39c12",
                                                "CDR" => "#6f42c1",
                                                _ => "#6c757d"
                                            };
                                            var tamanoKb = archivo.Tamano.HasValue ? (archivo.Tamano.Value / 1024.0).ToString("N0") + " KB" : "";

                                            <a href="@Url.Action("DescargarArchivo", "Produccion", new { guid = archivo.GuidRegistro })"
                                               class="d-flex align-items-center mr-3 mb-2 p-2"
                                               style="background: #f8f9fa; border-radius: 8px; border: 1px solid #e9ecef; text-decoration: none; color: inherit;"
                                               title="@(archivo.TipoArchivo?.ToUpper() == "PDF" ? "Abrir" : "Descargar") @archivo.NombreArchivo"
                                               @(archivo.TipoArchivo?.ToUpper() == "PDF" ? "target=\"_blank\"" : "")>
                                                <i class="@iconClass mr-2" style="font-size: 1.5rem; color: @iconColor;"></i>
                                                <div>
                                                    <div style="font-weight: 600; font-size: 0.8rem;">@archivo.TipoArchivo</div>
                                                    <div style="font-size: 0.7rem; color: #6c757d;">@tamanoKb</div>
                                                </div>
                                            </a>
                                        }
                                    </div>

                                    @* Vista Previa del PDF *@
                                    var archivoPdf = archivos.FirstOrDefault(a => a.TipoArchivo?.ToUpper() == "PDF");
                                    if (archivoPdf != null)
                                    {
                                        <hr class="my-2" />
                                        <div class="section-title">
                                            <i class="fas fa-file-pdf mr-1"></i>Vista Previa
                                        </div>
                                        <div style="border-radius: 6px; overflow: hidden; background: #525659; border: 1px solid #dee2e6;">
                                            <iframe id="pdfViewer"
                                                    src="@Url.Action("DescargarArchivo", "Produccion", new { guid = archivoPdf.GuidRegistro })"
                                                    style="width: 100%; height: 450px; border: none;"
                                                    title="Vista previa del PDF">
                                            </iframe>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<!-- Modal Solicitar Factura -->
<div class="modal fade" id="modalSolicitarFactura" tabindex="-1" role="dialog"
    aria-labelledby="modalSolicitarFacturaLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalSolicitarFacturaLabel">
                    <i class="fas fa-file-invoice-dollar mr-2"></i>@(Model.Estado == "FACTURA_SOLICITADA" ? "Actualizar Fecha Limite" : "Solicitar Factura")
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formSolicitarFactura">
                    <input type="hidden" id="hdnGuidProduccion" value="@Model.GuidRegistro" />

                    <!-- Opciones rapidas -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="mb-2">Seleccione un plazo sugerido:</label>
                            <div class="btn-group d-flex" role="group" id="btnGroupPlazo">
                                <button type="button" class="btn btn-outline-primary btn-plazo" data-dias="1">
                                    <i class="fas fa-clock mr-1"></i>1 Dia
                                    <small class="d-block" id="lblFecha1Dia"></small>
                                </button>
                                <button type="button" class="btn btn-outline-primary btn-plazo" data-dias="2">
                                    <i class="fas fa-clock mr-1"></i>2 Dias
                                    <small class="d-block" id="lblFecha2Dias"></small>
                                </button>
                                <button type="button" class="btn btn-outline-primary btn-plazo" data-dias="3">
                                    <i class="fas fa-clock mr-1"></i>3 Dias
                                    <small class="d-block" id="lblFecha3Dias"></small>
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-plazo" data-dias="0">
                                    <i class="fas fa-edit mr-1"></i>Manual
                                    <small class="d-block">Personalizado</small>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Campos de fecha y hora (inicialmente readonly) -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Fecha Limite <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="txtFechaLimite" required readonly
                                    style="background-color: #e9ecef;" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Hora Limite <span class="text-danger">*</span></label>
                                <input type="time" class="form-control" id="txtHoraLimite" required readonly
                                    style="background-color: #e9ecef;" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle mr-2"></i>
                                <span id="msgInfoPlazo">Seleccione una opcion de plazo para establecer la fecha y hora
                                    limite.</span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times mr-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-success" onclick="enviarSolicitudFactura()">
                    <i class="fas fa-paper-plane mr-1"></i>Enviar Solicitud
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Configurar URLs de retorno preservando filtros
        document.addEventListener('DOMContentLoaded', function() {
            var queryString = window.location.search;
            if (queryString) {
                var returnUrl = '@Url.Action("Index", "Produccion")' + queryString;

                // Actualizar boton Volver
                var btnVolver = document.getElementById('btnVolver');
                if (btnVolver) {
                    btnVolver.href = returnUrl;
                }

                // Actualizar breadcrumb
                var breadcrumb = document.getElementById('breadcrumbProduccion');
                if (breadcrumb) {
                    breadcrumb.href = returnUrl;
                }
            }
        });

        // Calcular fecha agregando dias laborables (Lunes a Viernes)
        function agregarDiasLaborables(fecha, dias) {
            var resultado = new Date(fecha);
            var diasAgregados = 0;

            while (diasAgregados < dias) {
                resultado.setDate(resultado.getDate() + 1);
                var diaSemana = resultado.getDay();
                // 0 = Domingo, 6 = Sabado
                if (diaSemana !== 0 && diaSemana !== 6) {
                    diasAgregados++;
                }
            }

            return resultado;
        }

        // Formatear fecha para mostrar (dd/MM/yyyy)
        function formatearFechaMostrar(fecha) {
            var dia = String(fecha.getDate()).padStart(2, '0');
            var mes = String(fecha.getMonth() + 1).padStart(2, '0');
            var anio = fecha.getFullYear();
            return dia + '/' + mes + '/' + anio;
        }

        // Formatear fecha para input date (yyyy-MM-dd)
        function formatearFechaInput(fecha) {
            var dia = String(fecha.getDate()).padStart(2, '0');
            var mes = String(fecha.getMonth() + 1).padStart(2, '0');
            var anio = fecha.getFullYear();
            return anio + '-' + mes + '-' + dia;
        }

        // Obtener nombre del dia
        function obtenerNombreDia(fecha) {
            var dias = ['Domingo', 'Lunes', 'Martes', 'Miercoles', 'Jueves', 'Viernes', 'Sabado'];
            return dias[fecha.getDay()];
        }

        // Calcular y mostrar las fechas sugeridas
        function calcularFechasSugeridas() {
            var hoy = new Date();

            for (var i = 1; i <= 3; i++) {
                var fechaSugerida = agregarDiasLaborables(hoy, i);
                var nombreDia = obtenerNombreDia(fechaSugerida);
                var fechaFormateada = formatearFechaMostrar(fechaSugerida);
                var labelId = i === 1 ? 'lblFecha1Dia' : 'lblFecha' + i + 'Dias';
                document.getElementById(labelId).textContent = nombreDia + ' ' + fechaFormateada + ' 18:00';
            }
        }

        // Actualizar mensaje en modo manual
        function actualizarMensajeManual() {
            var txtFecha = document.getElementById('txtFechaLimite');
            var txtHora = document.getElementById('txtHoraLimite');
            var msgInfo = document.getElementById('msgInfoPlazo');

            var fecha = txtFecha.value;
            var hora = txtHora.value;

            if (fecha && hora) {
                var fechaObj = new Date(fecha + 'T' + hora);
                var nombreDia = obtenerNombreDia(fechaObj);
                var fechaFormateada = formatearFechaMostrar(fechaObj);
                msgInfo.textContent = 'Fecha limite: ' + nombreDia + ' ' + fechaFormateada + ' a las ' + hora + ' horas.';
            } else if (fecha) {
                var fechaObj = new Date(fecha + 'T00:00:00');
                var nombreDia = obtenerNombreDia(fechaObj);
                var fechaFormateada = formatearFechaMostrar(fechaObj);
                msgInfo.textContent = 'Fecha seleccionada: ' + nombreDia + ' ' + fechaFormateada + '. Ingrese la hora limite.';
            } else if (hora) {
                msgInfo.textContent = 'Hora seleccionada: ' + hora + '. Ingrese la fecha limite.';
            } else {
                msgInfo.textContent = 'Ingrese manualmente la fecha y hora limite para la entrega de la factura.';
            }
        }

        // Seleccionar plazo
        function seleccionarPlazo(dias) {
            var botones = document.querySelectorAll('.btn-plazo');
            botones.forEach(function (btn) {
                btn.classList.remove('active', 'btn-primary');
                btn.classList.add('btn-outline-primary');
                if (btn.dataset.dias === '0') {
                    btn.classList.remove('btn-outline-primary');
                    btn.classList.add('btn-outline-secondary');
                }
            });

            var botonSeleccionado = document.querySelector('.btn-plazo[data-dias="' + dias + '"]');
            if (botonSeleccionado) {
                botonSeleccionado.classList.remove('btn-outline-primary', 'btn-outline-secondary');
                botonSeleccionado.classList.add('active', 'btn-primary');
            }

            var txtFecha = document.getElementById('txtFechaLimite');
            var txtHora = document.getElementById('txtHoraLimite');
            var msgInfo = document.getElementById('msgInfoPlazo');

            if (dias === 0) {
                // Modo manual
                txtFecha.readOnly = false;
                txtHora.readOnly = false;
                txtFecha.style.backgroundColor = '';
                txtHora.style.backgroundColor = '';
                txtFecha.value = '';
                txtHora.value = '';
                actualizarMensajeManual();
            } else {
                // Modo automatico
                var hoy = new Date();
                var fechaSugerida = agregarDiasLaborables(hoy, dias);

                txtFecha.value = formatearFechaInput(fechaSugerida);
                txtHora.value = '18:00';
                txtFecha.readOnly = true;
                txtHora.readOnly = true;
                txtFecha.style.backgroundColor = '#e9ecef';
                txtHora.style.backgroundColor = '#e9ecef';

                var nombreDia = obtenerNombreDia(fechaSugerida);
                var fechaFormateada = formatearFechaMostrar(fechaSugerida);
                msgInfo.textContent = 'Fecha limite: ' + nombreDia + ' ' + fechaFormateada + ' a las 18:00 horas (' + dias + ' dia' + (dias > 1 ? 's' : '') + ' laborable' + (dias > 1 ? 's' : '') + ').';
            }
        }

        function solicitarFactura() {
            // Limpiar campos del modal
            document.getElementById('txtFechaLimite').value = '';
            document.getElementById('txtHoraLimite').value = '';

            // Resetear botones
            var botones = document.querySelectorAll('.btn-plazo');
            botones.forEach(function (btn) {
                btn.classList.remove('active', 'btn-primary');
                if (btn.dataset.dias === '0') {
                    btn.classList.add('btn-outline-secondary');
                } else {
                    btn.classList.add('btn-outline-primary');
                }
            });

            // Resetear campos a readonly
            var txtFecha = document.getElementById('txtFechaLimite');
            var txtHora = document.getElementById('txtHoraLimite');
            txtFecha.readOnly = true;
            txtHora.readOnly = true;
            txtFecha.style.backgroundColor = '#e9ecef';
            txtHora.style.backgroundColor = '#e9ecef';

            // Resetear mensaje
            document.getElementById('msgInfoPlazo').textContent = 'Seleccione una opcion de plazo para establecer la fecha y hora limite.';

            // Calcular fechas sugeridas
            calcularFechasSugeridas();

            // Abrir modal
            $('#modalSolicitarFactura').modal('show');
        }

        // Evento click para botones de plazo y eventos de cambio en inputs
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-plazo').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var dias = parseInt(this.dataset.dias);
                    seleccionarPlazo(dias);
                });
            });

            // Eventos para actualizar mensaje en modo manual
            document.getElementById('txtFechaLimite').addEventListener('change', function () {
                var botonManual = document.querySelector('.btn-plazo[data-dias="0"].active');
                if (botonManual) {
                    actualizarMensajeManual();
                }
            });

            document.getElementById('txtHoraLimite').addEventListener('change', function () {
                var botonManual = document.querySelector('.btn-plazo[data-dias="0"].active');
                if (botonManual) {
                    actualizarMensajeManual();
                }
            });
        });

        function enviarSolicitudFactura() {
            var fecha = document.getElementById('txtFechaLimite').value;
            var hora = document.getElementById('txtHoraLimite').value;
            var guid = document.getElementById('hdnGuidProduccion').value;

            // Verificar si se selecciono alguna opcion
            var botonActivo = document.querySelector('.btn-plazo.active');

            // Validar campos requeridos
            var errores = [];
            if (!botonActivo) {
                errores.push('Debe seleccionar una opcion de plazo');
            }
            if (!fecha) errores.push('La fecha limite es requerida');
            if (!hora) errores.push('La hora limite es requerida');

            // Validar que la fecha y hora limite no sea menor a la actual
            if (fecha && hora) {
                var fechaHoraLimite = new Date(fecha + 'T' + hora);
                var ahora = new Date();

                if (fechaHoraLimite <= ahora) {
                    errores.push('La fecha y hora limite debe ser mayor a la fecha y hora actual');
                }
            }

            if (errores.length > 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Campos requeridos',
                    html: '<ul style="text-align:left;">' + errores.map(e => '<li>' + e + '</li>').join('') + '</ul>',
                    confirmButtonColor: '#f26522'
                });
                return;
            }

            // Confirmar antes de enviar
            Swal.fire({
                icon: 'question',
                title: 'Confirmar Solicitud',
                html: '¿Desea enviar la solicitud de factura con fecha limite <strong>' +
                    formatearFecha(fecha) + '</strong> a las <strong>' + hora + '</strong>?',
                showCancelButton: true,
                confirmButtonColor: '#007bff',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Si, Enviar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Llamar al endpoint del API
                    fetch('@Url.Action("SolicitarFactura", "Produccion")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            guidRegistro: guid,
                            fecha: fecha,
                            hora: hora
                        })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                $('#modalSolicitarFactura').modal('hide');
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Exito',
                                    text: data.message,
                                    confirmButtonColor: '#28a745'
                                }).then(() => {
                                    // Recargar la pagina para reflejar el nuevo estado
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: data.message,
                                    confirmButtonColor: '#dc3545'
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Error al procesar la solicitud',
                                confirmButtonColor: '#dc3545'
                            });
                        });
                }
            });
        }

        function formatearFecha(fecha) {
            if (!fecha) return '';
            var partes = fecha.split('-');
            return partes[2] + '/' + partes[1] + '/' + partes[0];
        }

