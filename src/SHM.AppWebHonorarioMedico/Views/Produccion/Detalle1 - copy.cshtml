@model SHM.AppDomain.DTOs.Produccion.ProduccionListaResponseDto
@{
    ViewData["Title"] = "Detalle de Produccion";
    var archivos = ViewBag.Archivos as List<SHM.AppWebHonorarioMedico.Models.ArchivoAdjuntoViewModel>
        ?? new List<SHM.AppWebHonorarioMedico.Models.ArchivoAdjuntoViewModel>();
}

<div class="wrapper">
    <div class="content-wrapper">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 titulo-formulario">
                            <i class="fas fa-file-medical mr-2"></i>Detalle de Produccion
                        </h1>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">
                <!-- Breadcrumb y Volver -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <ol class="breadcrumb m-0 bg-transparent p-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Produccion")">Produccion</a></li>
                        <li class="breadcrumb-item active">Detalle</li>
                    </ol>
                    <a href="@Url.Action("Index", "Produccion")"
                        class="text-secondary text-decoration-none d-inline-flex align-items-center"
                        title="Volver a la lista">
                        <i class="fas fa-arrow-circle-left" style="font-size: 1.3rem;"></i>
                        <span class="ml-2">Volver</span>
                    </a>
                </div>

                <!-- Datos de Produccion -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle mr-2"></i>Datos de Produccion
                        </h3>
                        <div class="card-tools">
                            @{
                                var badgeClass = Model.Estado switch
                                {
