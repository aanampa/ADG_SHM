                <!-- Bitacora -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-history mr-2"></i>Bitácora
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-sm table-striped table-bordered mb-0">
                                        <thead class="thead-light">
                                            <tr>
                                                <th style="width: 50px;" class="text-center">#</th>
                                                <th>Acción</th>
                                                <th style="width: 200px;">De</th>
                                                <th style="width: 180px;">Fecha</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">1</td>
                                                <td>Se solicito Factura con Fecha Limite 23/01/2026 18:00</td>
                                                <td>Juan Perez</td>
                                                <td>15/11/2005 11:00</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">2</td>
                                                <td>Se envio Factura</td>
                                                <td>Maria Robles</td>
