@functions {
    string FormatPeriodo(string? periodo)
    {
        if (string.IsNullOrEmpty(periodo)) return "-";
        if (DateTime.TryParse(periodo, System.Globalization.CultureInfo.GetCultureInfo("en-US"), out DateTime fecha))
        {
            return fecha.ToString("dd/MM/yyyy");
        }
        return periodo;
    }
}