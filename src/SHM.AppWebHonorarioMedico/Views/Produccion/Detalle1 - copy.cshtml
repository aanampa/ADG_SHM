                                            <i class="@iconClass" style="font-size: 3.5rem; color: @iconColor; margin-bottom: 1rem; display: block;"></i>
                                            <div style="font-weight: 600; margin-bottom: 0.25rem;">@archivo.TipoArchivo</div>
                                            <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 0.5rem;">@tamanoKb</div>
                                            <div style="font-size: 0.8rem; color: #6c757d; margin-bottom: 1rem; word-break: break-all;">@archivo.NombreArchivo</div>
                                            <a href="@Url.Action("DescargarArchivo", "Produccion", new { guid = archivo.GuidRegistro })"
                                               class="btn btn-sm" style="background: @btnColor; color: white; border-radius: 8px; padding: 0.5rem 1.25rem;">
                                                <i class="fas fa-download mr-1"></i>Descargar
                                            </a>
