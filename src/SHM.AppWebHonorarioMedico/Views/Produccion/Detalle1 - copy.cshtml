                                    "FACTURA_SOLICITADA" => "badge-info",
                                    "FACTURA_ENVIADA" => "badge-primary",
                                    "FACTURA_ACEPTADA" => "badge-primary",
                                    "FACTURA_LIQUIDADA" => "badge-secondary",
                                    "FACTURA_PAGADA" => "badge-success",
                                    "FACTURA_DEVUELTA" => "badge-danger",
                                    _ => "badge-secondary"
                                };
                            }
                            <span class="badge @badgeClass" style="font-size: 0.9rem;">@(Model.DesEstado ?? Model.Estado
                                                                ?? "-")</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Produccion</label>
                                    <input type="text" class="form-control" value="@(Model.CodigoProduccion ?? "-")"
                                        readonly style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Tipo de Produccion</label>
                                    <input type="text" class="form-control"
                                        value="@(Model.DesTipoProduccion ?? Model.TipoProduccion ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Periodo</label>
                                    <input type="text" class="form-control" value="@FormatPeriodo(Model.Periodo)"
                                        readonly style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Descripcion</label>
                                    <input type="text" class="form-control" value="@(Model.Descripcion ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Rubro</label>
                                    <input type="text" class="form-control"
                                        value="@(Model.DesTipoRubro ?? Model.TipoRubro ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Tipo Medico</label>
                                    <input type="text" class="form-control"
                                        value="@(Model.DesTipoMedico ?? Model.TipoMedico ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Sede</label>
                                    <input type="text" class="form-control" value="@(Model.NombreSede ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Fecha Creacion</label>
                                    <input type="text" class="form-control"
                                        value="@(Model.FechaCreacion?.ToString("dd/MM/yyyy hh:mm tt") ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Entidad Medica -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-building mr-2"></i>Cía Medica
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>RUC</label>
                                    <input type="text" class="form-control" value="@(Model.Ruc ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Razon Social</label>
                                    <input type="text" class="form-control" value="@(Model.RazonSocial ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Tipo Entidad</label>
                                    <input type="text" class="form-control"
                                        value="@(Model.DesTipoEntidadMedica ?? Model.TipoEntidadMedica ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Montos -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-calculator mr-2"></i>Montos
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Consumo</label>
                                    <input type="text" class="form-control text-right"
                                        value="S/ @(Model.MtoConsumo?.ToString("N2") ?? "0.00")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Descuento</label>
                                    <input type="text" class="form-control text-right text-danger"
                                        value="S/ @(Model.MtoDescuento?.ToString("N2") ?? "0.00")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Sub Total</label>
                                    <input type="text" class="form-control text-right"
                                        value="S/ @(Model.MtoSubtotal?.ToString("N2") ?? "0.00")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>IGV</label>
                                    <input type="text" class="form-control text-right"
                                        value="S/ @(Model.MtoIgv?.ToString("N2") ?? "0.00")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Imp. Renta</label>
                                    <input type="text" class="form-control text-right"
                                        value="S/ @(Model.MtoRenta?.ToString("N2") ?? "0.00")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Total</label>
                                    <input type="text" class="form-control text-right font-weight-bold text-primary"
                                        value="S/ @(Model.MtoTotal?.ToString("N2") ?? "0.00")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Comprobante -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-file-invoice mr-2"></i>Comprobante
                        </h3>
                    </div>
                    <div class="card-body">
                        @{
                            var tipoComprobanteTexto = Model.TipoComprobante switch
                            {
                                "01" => "Factura",
                                "03" => "Boleta",
                                _ => Model.TipoComprobante ?? "-"
                            };
                        }
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Tipo Comprobante</label>
                                    <input type="text" class="form-control" value="@tipoComprobanteTexto"
                                        readonly style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Serie - Numero</label>
                                    <input type="text" class="form-control" value="@(Model.ComprobanteFactura ?? "-")"
                                        readonly style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Fecha Emision</label>
                                    <input type="text" class="form-control"
                                        value="@(Model.FechaEmision?.ToString("dd/MM/yyyy") ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Fecha Limite</label>
                                    <input type="text" class="form-control"
                                        value="@(Model.FechaLimite?.ToString("dd/MM/yyyy hh:mm tt") ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Concepto</label>
                                    <input type="text" class="form-control" value="@(Model.Concepto ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Glosa</label>
                                    <input type="text" class="form-control" value="@(Model.Glosa ?? "-")" readonly
                                        style="background-color: #e9ecef;">
                                </div>
                            </div>
                        </div>
                        @if (Model.Estado == "FACTURA_PENDIENTE" || Model.Estado == "FACTURA_SOLICITADA")
                        {
                            <div class="row mt-3">
                                <div class="col-12">
                                    <button type="button" class="btn btn-success" onclick="solicitarFactura()">
                                        <i class="fas fa-file-invoice-dollar mr-1"></i>@(Model.Estado == "FACTURA_SOLICITADA" ? "Actualizar Fecha Limite" : "Solicitar Factura")
                                    </button>
                                </div>
                            </div>
                        }
                        @if (Model.Estado == "FACTURA_ENVIADA")
                        {
                            <div class="row mt-3">
                                <div class="col-12">
                                    <button type="button" class="btn btn-danger mr-2" onclick="devolverFactura()">
                                        <i class="fas fa-undo mr-1"></i>Devolver Factura
                                    </button>
                                    <button type="button" class="btn btn-success" onclick="aceptarFactura()">
                                        <i class="fas fa-check mr-1"></i>Aceptar Factura
                                    </button>
                                </div>
                            </div>
                        }
                        @* Documentos Adjuntos - Solo para estados diferentes a FACTURA_PENDIENTE y FACTURA_SOLICITADA *@
                        @if (Model.Estado != "FACTURA_PENDIENTE" && Model.Estado != "FACTURA_SOLICITADA" && archivos.Any())
                        {
                            <hr class="mt-4 mb-3" />
                            <div class="mb-3" style="font-weight: 600; color: #6c757d; font-size: 0.95rem;">
                                <i class="fas fa-paperclip mr-2"></i>Documentos Adjuntos
                            </div>
                            <div class="row">
                                @foreach (var archivo in archivos)
                                {
                                    var iconClass = archivo.TipoArchivo?.ToUpper() switch
                                    {
                                        "PDF" => "far fa-file-pdf",
                                        "XML" => "far fa-file-code",
                                        "CDR" => "far fa-file-archive",
                                        _ => "far fa-file"
                                    };
                                    var iconColor = archivo.TipoArchivo?.ToUpper() switch
                                    {
                                        "PDF" => "#dc3545",
                                        "XML" => "#f39c12",
                                        "CDR" => "#6f42c1",
                                        _ => "#6c757d"
                                    };
                                    var btnColor = archivo.TipoArchivo?.ToUpper() switch
                                    {
                                        "PDF" => "#dc3545",
                                        "XML" => "#f39c12",
                                        "CDR" => "#6f42c1",
                                        _ => "#6c757d"
                                    };
                                    var tamanoKb = archivo.Tamano.HasValue ? (archivo.Tamano.Value / 1024.0).ToString("N1") + " KB" : "-";

                                    <div class="col-md-4 mb-3">
