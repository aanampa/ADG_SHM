@model SHM.AppWebHonorarioMedico.Models.TablaDetalleCreateViewModel

<div class="modal fade" id="createDetalleModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-morado">
                <h5 class="modal-title text-white">
                    <i class="fas fa-plus-circle mr-2"></i>Nuevo Detalle
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="createDetalleForm">
                @Html.AntiForgeryToken()
                <input type="hidden" id="createDetalle_IdTabla" value="@Model.IdTabla" />
                <div class="modal-body">
                    <div class="alert alert-info py-2 mb-3">
                        <i class="fas fa-table mr-1"></i>
                        <strong>Tabla:</strong> @Model.Tablas.FirstOrDefault()?.Text
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createDetalle_Codigo">Codigo <span class="text-danger">*</span></label>
                                <input type="text" id="createDetalle_Codigo" class="form-control" maxlength="50" required
                                       placeholder="Ej: 001" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="createDetalle_Orden">Orden</label>
                                <input type="number" id="createDetalle_Orden" class="form-control" min="0"
                                       placeholder="Ej: 1" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="createDetalle_Descripcion">Descripcion</label>
                                <input type="text" id="createDetalle_Descripcion" class="form-control" maxlength="250"
                                       placeholder="Ej: Descripcion del detalle" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-times mr-1"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-morado" onclick="submitCreateDetalle()">
                        <i class="fas fa-save mr-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
