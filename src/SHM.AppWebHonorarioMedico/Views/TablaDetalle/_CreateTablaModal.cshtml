@model SHM.AppWebHonorarioMedico.Models.TablaCreateViewModel

<div class="modal fade" id="createTablaModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-morado">
                <h5 class="modal-title text-white">
                    <i class="fas fa-plus-circle mr-2"></i>Nueva Tabla
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="createTablaForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label for="createTabla_Codigo">Codigo <span class="text-danger">*</span></label>
                        <input type="text" id="createTabla_Codigo" class="form-control" maxlength="50" required
                               placeholder="Ej: TIPO_DOC" />
                    </div>
                    <div class="form-group">
                        <label for="createTabla_Descripcion">Descripcion</label>
                        <input type="text" id="createTabla_Descripcion" class="form-control" maxlength="250"
                               placeholder="Ej: Tipos de documento" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-times mr-1"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-morado" onclick="submitCreateTabla()">
                        <i class="fas fa-save mr-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
