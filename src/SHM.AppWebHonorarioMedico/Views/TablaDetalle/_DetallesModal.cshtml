@model SHM.AppWebHonorarioMedico.Models.TablaDetallesModalViewModel

<div class="modal fade" id="detallesModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-morado">
                <h5 class="modal-title text-white">
                    <i class="fas fa-list-ul mr-2"></i>Detalles de Tabla: @Model.CodigoTabla
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <div class="card mb-0 border-0">
                    <div class="card-header bg-light">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h6 class="mb-0">
                                    <i class="fas fa-table mr-1"></i>@Model.DescripcionTabla
                                </h6>
                            </div>
                            <div class="col-md-6 text-right">
                                <button type="button" class="btn btn-morado btn-sm" onclick="openCreateDetalleModal()">
                                    <i class="fas fa-plus mr-1"></i>Nuevo Detalle
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="detallesListContainer">
                        @await Html.PartialAsync("_DetallesListPartial", new SHM.AppWebHonorarioMedico.Models.TablaDetalleListViewModel
                        {
                            Items = Model.Detalles
                        })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times mr-1"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
