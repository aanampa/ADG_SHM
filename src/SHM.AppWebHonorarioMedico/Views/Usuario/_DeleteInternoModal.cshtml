@model SHM.AppWebHonorarioMedico.Models.UsuarioInternoDeleteViewModel

<div class="modal-header bg-danger">
    <h5 class="modal-title text-white"><i class="fas fa-user-times"></i> Eliminar Usuario</h5>
    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @Html.AntiForgeryToken()
    <input type="hidden" id="GuidRegistro" name="GuidRegistro" value="@Model.GuidRegistro" />

    <div class="text-center mb-4">
        <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
    </div>

    <p class="text-center">
        ¿Está seguro que desea eliminar el siguiente usuario?
    </p>

    <div class="card bg-light">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Model.NombreCompleto</dd>

                <dt class="col-sm-4">Login:</dt>
                <dd class="col-sm-8">@Model.Login</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>
            </dl>
        </div>
    </div>

    <div class="alert alert-info mt-3 mb-0">
        <i class="fas fa-info-circle"></i>
        El usuario será desactivado y no podrá acceder al sistema.
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">
        <i class="fas fa-times"></i> Cancelar
    </button>
    <button type="button" class="btn btn-danger" onclick="submitDelete()">
        <i class="fas fa-trash"></i> Eliminar
    </button>
</div>
