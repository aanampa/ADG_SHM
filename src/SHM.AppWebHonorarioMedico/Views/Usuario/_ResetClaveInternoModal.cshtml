@model SHM.AppWebHonorarioMedico.Models.UsuarioInternoResetClaveViewModel

<div class="modal-header bg-warning">
    <h5 class="modal-title"><i class="fas fa-key"></i> Resetear Clave</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @Html.AntiForgeryToken()
    <input type="hidden" id="GuidRegistro" name="GuidRegistro" value="@Model.GuidRegistro" />

    <div class="text-center mb-4">
        <i class="fas fa-unlock-alt fa-3x text-warning"></i>
    </div>

    <p class="text-center">
        Se generar√° una nueva clave para el siguiente usuario:
    </p>

    <div class="card bg-light">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Model.NombreCompleto</dd>

                <dt class="col-sm-4">Login:</dt>
                <dd class="col-sm-8">@Model.Login</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>
            </dl>
        </div>
    </div>

    <div class="form-group mt-3 mb-0">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="EnviarCorreo" name="EnviarCorreo" checked>
            <label class="custom-control-label" for="EnviarCorreo">
                Enviar nueva clave por correo electronico
            </label>
        </div>
        <small class="form-text text-muted">
            Si no marca esta opcion, la nueva clave se mostrara en pantalla.
        </small>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">
        <i class="fas fa-times"></i> Cancelar
    </button>
    <button type="button" class="btn btn-warning" onclick="submitResetClave()">
        <i class="fas fa-sync"></i> Resetear Clave
    </button>
</div>
